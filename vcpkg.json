{
  "name": "opendht",
  "version-string": "3.7.0",
  "port-version": 1,
  "description": "OpenDHT: A lightweight C++17 Distributed Hash Table library.",
  "homepage": "https://opendht.net",
  "license": "MIT",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "fmt",
    "nettle",
    "shiftmedia-libgnutls",
    "msgpack",
    "jsoncpp",
    "asio",
    "argon2",
    "simdutf"
  ],
  "default-features": [
    "proxy",
    "tools"
  ],
  "features": {
    "proxy": {
      "description": "DHT Proxy",
      "dependencies": [
        "llhttp",
        "restinio",
        "openssl"
      ]
    },
    "tools": {
      "description": "Tools",
      "dependencies": [
        "readline"
      ]
    },
    "test": {
      "description": "Unit tests",
      "dependencies": [
        "cppunit"
      ]
    }
  }
}